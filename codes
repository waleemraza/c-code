#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t--)
    {
        int x,y;
        cin>>x>>y;
        // your code goes here
        if(y>x){
            cout<<((y-x)*2+(x*1))<<"\n";
        }
        else{
            cout<<y*1<<"\n";
        }
        
        
    }
	

}
